<% book.book_comments.each do |book_comment| %>
  <tr>
    <td><p><%= image_tag book_comment.user.get_profile_image, size: "100x100" %></p>
    <%= book_comment.user.name %></td>
    <td><%= book_comment.comment %></td>
    <td><%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, remote: true, class: "btn btn-danger btn-sm" %></td>
  </tr>
<% end %>